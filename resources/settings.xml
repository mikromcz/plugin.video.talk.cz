<?xml version="1.0" encoding="UTF-8"?>
<settings version="1">
    <section id="plugin.video.talk.cz">
        <category id="category_login" label="30000">
            <group id="group_config_page" label="30010">
                <setting id="enable_config_page" type="boolean" label="30011" help="30110">
                    <level>0</level>
                    <default>false</default>
                    <control type="toggle" />
                </setting>
                <setting id="action_get_ip" type="action" label="30012" help="30111">
                    <level>0</level>
                    <control type="button" format="action">
                        <data>RunPlugin(plugin://plugin.video.talk.cz/?action=get_ip)</data>
                    </control>
                    <dependencies>
                        <dependency type="enable" setting="enable_config_page">true</dependency>
                    </dependencies>
                </setting>
            </group>

            <group id="group_manual_phpsessid" label="30020">
                <setting id="session_cookie" type="string" label="30024" help="30112">
                    <level>0</level>
                    <default />
                    <constraints>
                        <allowempty>true</allowempty>
                    </constraints>
                    <control type="edit" format="string">
                        <heading>30024</heading>
                        <hidden>true</hidden>
                    </control>
                </setting>
                <setting id="action_test_session" type="action" label="30025" help="30113">
                    <level>0</level>
                    <control type="button" format="action">
                        <data>RunPlugin(plugin://plugin.video.talk.cz/?action=test_session)</data>
                    </control>
                </setting>
            </group>
        </category>

        <category id="category_playback" label="30001">
            <group id="group_streams" label="30030">
                <setting id="preferred_stream" type="integer" label="30031" help="30114">
                    <level>0</level>
                    <default>0</default>
                    <control type="spinner" format="string" />
                    <constraints>
                        <options>
                            <option label="30032">0</option>
                            <option label="30033">1</option>
                        </options>
                    </constraints>
                </setting>
                <setting id="video_quality" type="integer" label="30034" help="30115">
                    <level>0</level>
                    <default>0</default>
                    <control type="spinner" format="string" />
                    <constraints>
                        <options>
                            <option label="30035">0</option>
                            <option label="30036">1</option>
                            <option label="30037">2</option>
                            <option label="30038">3</option>
                            <option label="30039">4</option>
                            <option label="30040">5</option>
                        </options>
                    </constraints>
                    <dependencies>
                        <dependency type="enable" setting="preferred_stream" operator="is">1</dependency>
                    </dependencies>
                </setting>
                <setting id="action_inputstream_settings" type="action" label="30041" help="30116">
                    <level>0</level>
                    <control type="button" format="action" close="true">
                        <data>Addon.OpenSettings(inputstream.adaptive)</data>
                    </control>
                    <dependencies>
                        <dependency type="enable" setting="preferred_stream" operator="is">0</dependency>
                    </dependencies>
                </setting>
            </group>

            <group id="group_youtube" label="30050">
                <setting id="skip_yt_time" type="integer" label="30051" help="30117">
                    <level>2</level>
                    <default>22</default>
                    <control type="slider" format="integer" />
                    <constraints>
                        <minimum>15</minimum>
                        <step>1</step>
                        <maximum>30</maximum>
                    </constraints>
                </setting>
            </group>
        </category>

        <category id="category_advanced" label="30002">
            <group id="group_talknews" label="30060">
                <setting id="monitor_talknews" type="boolean" label="30061" help="30118">
                    <level>0</level>
                    <default>true</default>
                    <control type="toggle" />
                </setting>
                <setting id="check_interval" type="integer" label="30062" help="30119">
                    <level>3</level>
                    <default>2</default>
                    <control type="spinner" format="string" />
                    <constraints>
                        <options>
                            <option label="30065">0</option>
                            <option label="30066">1</option>
                            <option label="30067">2</option>
                            <option label="30068">3</option>
                            <option label="30069">4</option>
                            <option label="30070">5</option>
                        </options>
                    </constraints>
                    <dependencies>
                        <dependency type="enable" setting="monitor_talknews">true</dependency>
                    </dependencies>
                </setting>
                <setting id="action_reset_monitor" type="action" label="30063" help="30120">
                    <level>0</level>
                    <control type="button" format="action">
                        <data>RunPlugin(plugin://plugin.video.talk.cz/?action=reset_monitor)</data>
                    </control>
                    <dependencies>
                        <dependency type="enable" setting="monitor_talknews">true</dependency>
                    </dependencies>
                </setting>
                <setting id="last_talknews_title" type="string" label="30064">
                    <level>4</level>
                    <constraints>
                        <allowempty>true</allowempty>
                    </constraints>
                    <control type="edit" format="string">
                        <heading>30064</heading>
                    </control>
                </setting>
            </group>

            <group id="group_cache" label="30080">
                <setting id="use_cache" type="boolean" label="30081" help="30121">
                    <level>3</level>
                    <default>true</default>
                    <control type="toggle" />
                </setting>
                <setting id="action_clear_cache" type="action" label="30082" help="30122">
                    <level>3</level>
                    <control type="button" format="action">
                        <data>RunPlugin(plugin://plugin.video.talk.cz/?action=clear_cache)</data>
                    </control>
                </setting>
            </group>

            <group id="group_config_server" label="30090">
                <setting id="config_port" type="integer" label="30091" help="30123">
                    <level>3</level>
                    <default>47447</default>
                    <control type="edit" format="integer">
                        <heading>30091</heading>
                    </control>
                    <constraints>
                        <minimum>1024</minimum>
                        <maximum>65535</maximum>
                    </constraints>
                </setting>
            </group>

            <group id="group_logging" label="30100">
                <setting id="debug" type="boolean" label="30101" help="30124">
                    <level>3</level>
                    <default>false</default>
                    <control type="toggle" />
                </setting>
            </group>
        </category>
    </section>
</settings>